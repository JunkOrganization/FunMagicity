<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <View
                    android:layout_alignParentStart="true"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorYellowOrange"
                    android:layout_alignParentLeft="true"/>
                <View
                android:layout_alignParentEnd="true"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="@color/colorYellowOrange"
                android:layout_alignParentRight="true"/>
                <ImageView
                    android:id="@+id/img_spot_info"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/test"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/spot_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/colorYellowOrange"
                    android:text="思源路"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingStart="50dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginVertical="10dp">
                <TextView
                    android:id="@+id/spot_info_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cdvdvdffdbbgdfvbfhbvhjdfbvhjdfbvjhdbvjhdfbvjdhfbvjdfbvjdfbvdfhbvhdfvbhdfhb"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

