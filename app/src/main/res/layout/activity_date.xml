<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg2">
    <FrameLayout
        android:layout_centerInParent="true"
        android:paddingTop="70dp"
        android:layout_width="320dp"
        android:layout_height="400dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_add"
            app:cardBackgroundColor="@color/colorGrey"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="出行日期"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="30dp">
                    <CheckBox
                        android:id="@+id/new_label2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特色美食"
                        android:theme="@style/My_CheckBox"
                        android:textSize="12sp"
                        android:textColor="@color/colorWhite"/>
                    <CheckBox
                        android:id="@+id/new_label2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="风景摄影"
                        android:textSize="12sp"
                        android:theme="@style/My_CheckBox"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingStart="50dp"
                    android:paddingEnd="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingRight="30dp"
                    android:paddingLeft="50dp">
                    <CheckBox
                        android:id="@+id/new_label2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网红小资"
                        android:theme="@style/My_CheckBox"
                        android:textSize="12sp"
                        android:textColor="@color/colorWhite"/>
                    <CheckBox
                        android:id="@+id/new_label2_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="休闲娱乐"
                        android:textSize="12sp"
                        android:theme="@style/My_CheckBox"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingStart="50dp"
                    android:paddingEnd="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="30dp">
                    <CheckBox
                        android:id="@+id/new_label2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史文化"
                        android:theme="@style/My_CheckBox"
                        android:textSize="12sp"
                        android:textColor="@color/colorWhite"/>
                    <CheckBox
                        android:id="@+id/new_label2_random"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="随机"
                        android:textSize="12sp"
                        android:theme="@style/My_CheckBox"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <Button
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/btn_next_step_label2"
                    android:background="@drawable/bt_shape_2"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="@string/next"
                    android:textColor="@color/colorWhite"
                    >
                </Button>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:src="@drawable/plus_x"
            android:transitionName="loginFab"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>


</RelativeLayout>
